<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fad7aa" >
    
    <TextView
        android:id="@+id/textviewSelectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:text="@string/select_label" />

    <GridView
        android:id="@+id/gridviewArticleSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   		android:layout_below="@id/textviewSelectLabel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="100dp" />
    
    <com.example.jadex01.HorizontalScrollExView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/hsvArticleSelect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
 		android:layout_below="@id/textviewSelectLabel"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:id="@+id/buttonReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@null"
		android:contentDescription="@string/empty_string"
        android:src="@drawable/button_back" />

</RelativeLayout><!-- From: file:/D:/Works/AppSeminar/SvnWorks/App/Team/Yakimanju/Projects/Danmen/Programs/AppAs/app/src/main/res/layout/activity_select.xml -->